<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/grid_view_back"
    android:layout_margin="5dp"
    android:padding="5dp">

    <ImageView
        android:layout_width= "100dp"
        android:layout_height= "100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/user_thumbnail"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="StudentFName StudentLName"
            android:id="@+id/studentName_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:textColor="#030101" />
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_margin="5dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Faculty:"
            android:id="@+id/faculty_label"
            android:layout_below="@+id/studentName_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#030101" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:id="@+id/email_label"
            android:layout_below="@+id/faculty_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#030101" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/faculty_textView"
            android:layout_below="@+id/faculty_label"
            android:layout_alignLeft="@+id/faculty_label"
            android:layout_alignStart="@+id/faculty_label"
            android:textSize="16dp"
            android:textColor="#030101" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/emain_textView"
            android:layout_below="@+id/email_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16dp"
            android:textColor="#030101" />
    </RelativeLayout>


</LinearLayout>