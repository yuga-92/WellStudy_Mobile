<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/user_thumbnail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Student`s Name"
        android:id="@+id/studentName_textView"
        android:textColor="@color/background_material_light"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView3"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/background_material_light"
        android:layout_alignBottom="@+id/studentName_textView"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:id="@+id/view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="160dp"
        android:background="#e4e9ec"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/abc_search_url_text_pressed"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView10"
            android:textColor="@color/black"
            android:text="Student`s facultative subjects:"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/listView"
            android:layout_below="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView11"
            android:textColor="@color/black"
            android:text="Students scores:"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/listView"
            android:layout_centerHorizontal="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:id="@+id/studentScores_listView"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
           />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/studentsGroupTextView"
        android:textColor="@color/background_material_light"
        android:text="Group: "
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/studentFacultyTextView"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/studentEmail_textView"
        android:textColor="@color/background_material_light"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/studentFacultyTextView"
        android:textColor="@color/background_material_light"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/studentEmail_textView"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView8"
        android:layout_marginLeft="5dp"
        android:textColor="@color/background_material_light"
        android:text="Year of study:"
        android:textSize="14dp"

        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:textColor="@color/background_material_light"
        android:text="Education:"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/studentsGroupTextView"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/typeOfEducation_textView"
        android:textColor="@color/background_material_light"
        android:textSize="14dp"
        android:layout_marginRight="28dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/student_yearOfStudy"
        android:layout_below="@+id/studentName_textView"
        android:layout_alignRight="@+id/studentName_textView"
        android:layout_alignEnd="@+id/studentName_textView"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/studentsGroup_textView"
        android:textColor="@color/background_material_light"
        android:textSize="14dp"
        android:layout_above="@+id/typeOfEducation_textView"
        android:layout_alignRight="@+id/typeOfEducation_textView"
        android:layout_alignEnd="@+id/typeOfEducation_textView" />

</RelativeLayout>